<div class="form-container">
  <%= form_for(@thing) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.text_field :category, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_field :notes, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :website %>
      <%= f.text_field :website, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <div class="text-center">
      <%= link_to "Home", things_path, class: "btn btn-warning" %>
      <%= link_to "Delete", thing_path, method: :delete, class: "btn btn-danger" %>
      <%= f.submit "Update", class: 'btn btn-success white' %>
    </div>
  <% end %>
</div>
