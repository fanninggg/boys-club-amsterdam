<div class="form-container">
  <h3 class="form-title">Add a new activity you mincebag</h3>

  <%= simple_form_for @thing do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :notes %>
    <%= f.input :website %>
    <%= f.submit "Add Activity", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Home", things_path %>
</div>
